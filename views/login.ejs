<%- include('partials/header') %>

<div class="container m-0">
    <h1>Login</h1>
    <div class="row">
        <div class="col-8 ">
            <div class="card p-2 dark shadow">
                <form action="/login" method="POST"> 
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" name="username" aria-describedby="emailHelp" fdprocessedid="lvxfsc">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" name="password" fdprocessedid="blj7zl" autocomplete="off">
                    </div>
                    <button type="submit" class="btn btn-dark" fdprocessedid="iwg69h">Submit</button>
                </form>
            </div>
        </div>
        <div class="col-4">
            <div class="card social-block">
                <div class="card body">
                    <a href="/auth/google" class="btn btn-block">
                        <i class="fab fa-google"></i>
                        Sign in with google
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>